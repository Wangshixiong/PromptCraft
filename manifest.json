{
    "manifest_version": 3,
    "name": "Prompt管理助手",
    "version": "0.1.7",
    "description": "一个安全、可靠、可跨设备同步的个人提示词管理工具。",
    "permissions": [
    "storage",
    "sidePanel",
    "contextMenus",
    "activeTab",
    "identity"
  ],
    "host_permissions": [
      "https://uwgxhtrbixsdabjvuuaj.supabase.co/*",
      "https://*.supabase.co/*"
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_title": "打开 Prompt管理助手"
    },
    "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "打开或关闭 Prompt管理助手  侧边栏"
    }
  },
  "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_script.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
  "web_accessible_resources": [
    {
      "resources": ["default-prompts.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
  